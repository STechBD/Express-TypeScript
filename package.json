{
  "name": "install-express",
  "version": "1.0.0",
  "description": "The basic backend app template of Express.js with TypeScript support.",
  "keywords": [
    "express",
    "installer",
    "javascript",
    "typescript",
    "express.js",
    "node.js",
    "nodemon",
    "framework",
    "aashemul",
    "stechbd"
  ],
  "bin": {
    "create-express.js": "build/app.js"
  },
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "dev": "nodemon src/app.ts",
    "build": "ts-node src/build.ts && tsc -p .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "fs-extra": "^11.2.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.5",
    "pug": "^3.0.3",
    "sass": "^1.78.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5"
  }
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/*.ts",
    "src/app/*.ts",
    "src/routes/*.ts",
    "src/views/*.jade",
    "src/public/*/*.*"
  ],
  "exclude": [
	"src/build.ts",
    "node_modules"
  ]
}
